{
  "name": "drupal-pyramid/drupal-pyramid",
  "description": "Composer-based template for Drupal projects.",
  "type": "project",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Matthieu SCARSET",
      "role": "Fullstack Drupal developer",
      "email": "m@matthieuscarset.com",
      "homepage": "http://matthieuscarset.com/"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "require": {
    "composer/installers": "^1.2",
    "cweagans/composer-patches": "^1.6",
    "drupal-composer/drupal-scaffold": "^2.2",
    "oomphinc/composer-installers-extender": "^1.1",
    "vlucas/phpdotenv": "^2.4",
    "webflo/drupal-finder": "^1.0.0",
    "webmozart/path-util": "^2.3",
    "drush/drush": "^9.0.0",
    "drupal/core": "~8.5.3",
    "drupal/console": "^1.0.2",
    "drupal/ctools": "^3.0",
    "drupal/memcache": "^2.0@alpha",
    "drupal/config_ignore": "^2.1",
    "drupal/config_split": "^1.3",
    "drupal/config_installer": "^1.8",
    "drupal/entity_browser": "^1.4",
    "drupal/entity_browser_entity_form": "^1.4",
    "drupal/inline_entity_form": "^1.0@beta",
    "drupal/focal_point": "^1.0@beta",
    "drupal/linkit": "^4.3",
    "drupal/link_attributes": "^1.2",
    "drupal/paragraphs": "^1.2",
    "drupal/metatag": "^1.5",
    "drupal/pathauto": "^1.2",
    "drupal/redirect": "^1.2",
    "drupal/schema_metatag": "^1.2",
    "drupal/simple_sitemap": "^2.12",
    "drupal/viewsreference": "^2.0@alpha",
    "drupal/yoast_seo": "^1.3",
    "drupal/migrate_plus": "^4.0-beta3",
    "drupal/migrate_tools": "^4.0-beta3",
    "drupal/migrate_source_csv": "^2.1"
  },
  "require-dev": {
    "behat/mink": "~1.7",
    "behat/mink-goutte-driver": "~1.2",
    "jcalderonzumba/gastonjs": "~1.0.2",
    "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
    "mikey179/vfsstream": "~1.2",
    "phpunit/phpunit": ">=4.8.28 <5",
    "webflo/drupal-core-require-dev": "~8.5.3",
    "drupal/devel": "^1.2",
    "drupal/coder": "^8.2",
    "drupal/stage_file_proxy": "^1.0@alpha"    
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "bin-dir": "bin/",
    "sort-packages": false,
    "preferred-install": "dist",
    "discard-changes": true
  },
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ],
    "files": [
      "load.environment.php"
    ]
  },
  "scripts": {
    "drush": "DrupalPyramid\\composer\\ScriptHandler::doDrush",
    "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
    "generate-salt": "DrupalPyramid\\composer\\ScriptHandler::generateSalt",
    "generate-keys": "DrupalPyramid\\composer\\ScriptHandler::generateOpenSslKeys",
    "fix-permissions": "DrupalPyramid\\composer\\ScriptHandler::fixPermissions",
    "fix-permissions-keys": "DrupalPyramid\\composer\\ScriptHandler::fixOpenSslKeysPermissions",
    "npm-cleanup": "DrupalPyramid\\composer\\ScriptHandler::npmCleanup",
    "keys-cleanup": "DrupalPyramid\\composer\\ScriptHandler::keysCleanup",
    "dependency-cleanup": "DrupalPyramid\\composer\\ScriptHandler::dependencyCleanup",
    "files-cleanup": "DrupalPyramid\\composer\\ScriptHandler::filesCleanup",
    "code-check-practice": "DrupalPyramid\\composer\\ScriptHandler::phpcbf",
    "code-check-standard": "DrupalPyramid\\composer\\ScriptHandler::phpcs",
    "code-review": [
      "@code-check-practice",
      "@code-check-standard"
    ],
    "pre-install-cmd": [
      "DrupalPyramid\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "pre-update-cmd": [
      "DrupalPyramid\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "post-install-cmd": [
      "DrupalPyramid\\composer\\ScriptHandler::createRequiredFiles",
      "@drupal-scaffold",
      "@generate-salt",
      "@generate-keys",
      "@fix-permissions",
      "@fix-permissions-keys"
    ],
    "post-update-cmd": [
      "DrupalPyramid\\composer\\ScriptHandler::createRequiredFiles",
      "@drupal-scaffold",
      "@git-cleanup",
      "@fix-permissions",
      "@fix-permissions-keys"
    ]
  },
  "extra": {
    "installer-types": [
      "drupal-config",
      "drupal-theme-custom"
    ],
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "web/themes/custom/{$name}": [
        "type:drupal-theme-custom"
      ],
      "drush/contrib/{$name}": [
        "type:drupal-drush"
      ]
    },
    "drupal-scaffold": {
      "excludes": [
        "sites/example.settings.local.php",
        "sites/default/default.settings.php",
        "sites/development.services.yml"
      ],
      "initial": {
        "sites/default/default.services.yml": "sites/default/services.yml",
        "sites/default/default.settings.php": "sites/default/settings.php"
      }
    },
    "patches": {
      "drupal/paragraphs": {
        "#2764681 - Allow paragraph type deletion if content exists": "https://www.drupal.org/files/issues/2764681-allow-paragraphs-type-deletion-if-content-exists-55.patch"
      }      
    }
  }
}
